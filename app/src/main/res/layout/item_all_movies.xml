<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itemDomainUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/tViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вечные"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tViewRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата релиза: 15.12.2021"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tViewRelease"
            app:layout_constraintVertical_bias="0.1" />


        <TextView
            android:id="@+id/tViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="5.25"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/rating_image1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rating_image1"/>

        <ImageView
            android:id="@+id/rating_image1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/tViewRating"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image1"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image2"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image3"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image4"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image6"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_half"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image5"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image7"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_border"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image6"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image8"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_border"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image7"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image9"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_border"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image8"
            app:tint="@color/yellow" />
        <ImageView
            android:id="@+id/rating_image10"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="4dp"
            android:src="@drawable/star_border"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintStart_toEndOf="@+id/rating_image9"
            app:tint="@color/yellow" />


        <ImageView
            android:id="@+id/favoritesImage"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/favorite_border_black"
            app:layout_constraintTop_toTopOf="@id/rating_image1"
            app:layout_constraintBottom_toBottomOf="@id/rating_image1"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>